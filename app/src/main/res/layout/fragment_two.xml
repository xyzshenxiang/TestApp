        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="two fragment" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back" />

